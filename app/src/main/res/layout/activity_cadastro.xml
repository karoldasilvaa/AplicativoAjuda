<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absolutX="1dp"
    tools:layout_editor_absolutY="1dp"
    android:fillViewport="true"
    android:orientation="vertical">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/blue"
      tools:context="com.example.novoprojeto.Cadastro">


    <TextView
        android:id="@+id/tilCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="40px"
        android:text="@string/tituloCadastro"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ContainerComponents"
        style="@style/ContainerComponents"
        android:layout_width="298dp"
        android:layout_height="518dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilCadastro" />

    <EditText
        android:id="@+id/editNome"
        style="@style/Edit_text"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:hint="Nome"
        android:textColor="@color/black"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toTopOf="@id/ContainerComponents" />

    <EditText
        android:id="@+id/editCpf"
        style="@style/Edit_text"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="116dp"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toTopOf="@id/ContainerComponents" />

    <EditText
        android:id="@+id/editTelefone"
        style="@style/Edit_text"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="192dp"
        android:hint="Telefone"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toTopOf="@id/ContainerComponents" />

    <EditText
        android:id="@+id/editEmail"
        style="@style/Edit_text"
        android:layout_width="258dp"
        android:layout_height="58dp"
        android:layout_marginTop="172dp"
        android:drawableRight="@drawable/ic_email"
        android:hint="Email"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toBottomOf="@id/editNome" />

    <EditText
        android:id="@+id/editSenhaCadastro"
        style="@style/Edit_text"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:drawableRight="@drawable/ic_senha"
        android:hint="Senha"
        android:textColor="@color/black"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toBottomOf="@id/editEmail" />

    <EditText
        android:id="@+id/ediConfirmeSenha"
        style="@style/Edit_text"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="88dp"
        android:drawableRight="@drawable/ic_senha"
        android:hint="Confirme a senha"
        android:textColor="@color/black"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toBottomOf="@id/editEmail" />

    <RadioGroup
        android:id="@+id/grupo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ContainerComponents"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@id/ContainerComponents"
        app:layout_constraintTop_toTopOf="@id/ContainerComponents" />


    <Button
        android:id="@+id/btCadastrarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:width="270dp"
        android:height="68dp"
        android:text="@string/textCadastro"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>